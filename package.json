{
    "name": "rapidstream",
    "version": "0.0.0",
    "scripts": {
        "ng": "cd fe && ng",
        "start": "ng serve",
        "watch": "ng build --watch --configuration development",
        "test": "ng test",
        "docker": "npm run docker:down && cd docker && docker-compose up -d",
        "docker:down": "cd docker && docker-compose down --remove-orphans",
        "build": "cd fe/ && ng build --base-href=https://rapidstreaming.top/",
        "deploy": "npm run build && docker-compose -f docker/docker-compose.prod.yml up -d"
    }
}